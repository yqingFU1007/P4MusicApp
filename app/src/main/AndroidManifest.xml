<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.p4">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayingActivity"
            android:label="正在播放"
            android:parentActivityName=".AllSongsActivity"/>
        <activity
            android:name=".SingersActivity"
            android:label="所有歌手"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".AllSongsActivity"
            android:label="所有歌曲"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".SingerSongsActivity"
            android:label="歌手"
            android:parentActivityName=".SingersActivity"></activity>
    </application>

</manifest>